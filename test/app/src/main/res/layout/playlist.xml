<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/img_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#1C1C1C"
        android:importantForAccessibility="no"
        android:paddingStart="5dp"
        android:textAlignment="textStart"
        app:srcCompat="@drawable/back"
        tools:ignore="RtlSymmetry,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/img_play_list"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="100dp"
        android:importantForAccessibility="no"
        app:srcCompat="@drawable/chipu" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:background="#1C1C1C"
        android:src="@drawable/like"
        android:contentDescription="@string/todo1"
        tools:ignore="RtlHardcoded" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currenttime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:text="@string/_00_00"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/endtime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingEnd="15dp"
            android:text="@string/_00_00_end"
            android:textAlignment="textEnd"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="#1C1C1C"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_next_to"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1C1C1C"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/swap_horiz_24" />

        <ImageButton
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1C1C1C"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/skip_previous_24" />

        <ImageButton
            android:id="@+id/img_pause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1C1C1C"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/play_circle_24" />

        <ImageButton
            android:id="@+id/img_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1C1C1C"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/skip_next" />

        <ImageButton
            android:id="@+id/img_repeat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1C1C1C"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/baseline_repeat_one_24" />
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>